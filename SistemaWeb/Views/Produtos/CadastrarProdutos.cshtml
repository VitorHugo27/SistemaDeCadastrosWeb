
@{
    ViewBag.Title = "CadastrarProdutos";
}

<h2>Cadastrar Produtos</h2>

<div class="row">
    <div class="col-md-4">
        <form action="@Url.Action("Cadastrar","Produtos")">
            <div class="mb-3">
                <label for="inputNome" class="form-label">Nome</label>
                <input type="text" class="form-control" name="Nome" id="inputNome">
            </div>
            <div class="mb-3">
                <label for="inputDescricao" class="form-label">Descrição</label>
                <input type="text" class="form-control" name="Descricao" id="inputDescricao">
            </div>
            <div class="mb-3">
                <label for="inputLote" class="form-label">Lote</label>
                <input type="text" class="form-control" name="Lote" id="inputLote">
            </div>
            <div class="mb-3">
                <label for="inputValor" class="form-label">Valor</label>
                <input type="number" class="form-control" name="Valor" id="inputValor">
            </div>
            <div class="mb-3">
                <label for="inputFornecedor" class="form-label">Fornecedor</label>
                <input type="text" class="form-control" name="Fornecedor" id="inputFornecedor">
            </div>
            <div class="mb-3">
                <label for="inputQuantidade" class="form-label">Quantidade</label>
                <input type="number" class="form-control" name="Quantidade" id="inputQuantidade">
            </div>
            <div class="mb-3">
                <label for="inputFoto" class="form-label">Foto</label>
                <input type="text" class="form-control" name="Foto" id="inputFoto">
            </div>
            <div class="mb-3 form-check">
                <br />
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <a type="button" href="@Url.Action("ListarProdutos","Produtos")" class="btn btn-danger">Cancelar</a>
        </form>
    </div>
</div>