
@{
    ViewBag.Title = "Listar Produtos";
}

<h2>Listar Produtos</h2>

<br />

<p>
    <a href="@Url.Action("CadastrarProdutos","Produtos")" class="btn btn-success">Cadastrar</a>
</p>
<body>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>Ações</th>
                <th>Foto</th>
                <th>Nome</th>
                <th>Descricao</th>
                <th>Lote</th>
                <th>Valor</th>
                <th>Fornecedor</th>
                <th>Quantidade</th>
                <th>DataCadastro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Produtos)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("CadastrarProdutos","Produtos", new { id = item.Id})" style="margin-top: 20px;" class="btn btn-warning">Editar</a>
                        <a data-id="@item.Id" onclick="Apagar(this);" style="margin-top: 20px;" class="btn btn-danger">Apagar</a>
                    </td>
                    <td>
                        <img src="@item.Foto" width="70" height="70">
                    </td>
                    <td>
                        <p style="margin-top: 25px;">@item.Nome</p>
                    </td>
                    <td>
                        <p style="margin-top: 25px; "> @item.Descricao</p>
                    </td>
                    <td>
                        <p style="margin-top: 25px; "> @item.Lote </p>
                    </td>
                    <td>
                        <p style="margin-top: 25px; "> @item.Valor </p>
                    </td>
                    <td>
                        <p style="margin-top: 25px; "> @item.Fornecedor </p>
                    </td>
                    <td>
                        <p style="margin-top: 25px;">  @item.Quantidade </p>
                    </td>
                    <td>
                        <p style="margin-top: 25px;">  @item.DataCadastro </p>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/Customized/ListarProdutos.js"></script>
</body>
