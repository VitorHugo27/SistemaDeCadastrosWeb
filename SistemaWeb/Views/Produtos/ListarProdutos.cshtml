
@{
    ViewBag.Title = "ListarProdutos";
}

<h2>ListarProdutos</h2>

<p>
    <a href="@Url.Action("CadastrarProdutos","Produtos")" class="btn btn-default">Cadastrar</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>Ações</th>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Lote</th>
            <th>Valor</th>
            <th>Fornecedor</th>
            <th>Quantidade</th>
            <th>Foto</th>
            <th>DataCadastro</th>
        </tr>
    </thead>
    @foreach (var item in ViewBag.Produtos)
    {
        <tr>
            <td>
                <a href="@Url.Action("ListarProdutos","Produtos")" style="margin-top: 20px;" class="btn btn-warning">Editar</a>
                <a href="@Url.Action("ListarProdutos","Produtos")" style="margin-top: 20px;" class="btn btn-danger">Apagar</a>
            </td>
            <td>
                <img src="@item.Foto" width="70" height="70">
            </td>
            <td>
                <p style="margin-top: 25px;">@item.Nome</p>
            </td>
            <td>
                <p style="margin-top: 25px; "> @item.Descricao</p>
            </td>
            <td>
                <p style="margin-top: 25px; "> @item.Lote </p>
            </td>
            <td>
                <p style="margin-top: 25px; "> @item.Valor </p>
            </td>
            <td>
                <p style="margin-top: 25px; "> @item.Fornecedor </p>
            </td>
            <td>
                <p style="margin-top: 25px;">  @item.Quantidade </p>
            </td>
            <td>
                <p style="margin-top: 25px;">  @item.DataCadastro </p>
            </td>
        </tr>
    }
    <tbody>
    </tbody>
</table>